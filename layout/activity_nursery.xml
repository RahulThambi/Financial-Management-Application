<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nursery"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="1000dp"
                        android:layout_height="8dp"
                        android:background="@android:color/black"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"/>

                    <ImageView
                        android:id="@+id/plant_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/plant1"/>
                    <View
                        android:layout_width="1000dp"
                        android:layout_height="8dp"
                        android:background="@android:color/black"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/plant_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peace Lily
"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingTop="8dp"/>
                        <Button
                            android:id="@+id/buy_button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Buy"
                            android:layout_gravity="end"
                            android:paddingTop="8dp"
                            android:layout_marginLeft="160dp"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/plant_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: 1000 gold"
                        android:paddingTop="4dp"/>

                    <View
                        android:layout_width="1000dp"
                        android:layout_height="8dp"
                        android:background="@android:color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="0dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="1000dp"
                            android:layout_height="8dp"
                            android:background="@android:color/black"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"/>
                        <ImageView
                            android:id="@+id/plant_image_2"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/plant2"/>
                        <View
                            android:layout_width="1000dp"
                            android:layout_height="8dp"
                            android:background="@android:color/black"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/plant_name_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Snake Plant
"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:paddingTop="8dp"/>
                            <Button
                                android:id="@+id/buy_button_3"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Buy"
                                android:layout_gravity="end"
                                android:paddingTop="8dp"
                                android:layout_marginLeft="160dp"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/plant_price_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: 1300 gold"
                            android:paddingTop="4dp"/>
                        <View
                            android:layout_width="1000dp"
                            android:layout_height="8dp"
                            android:background="@android:color/black"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="0dp"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="1000dp"
                                android:layout_height="8dp"
                                android:background="@android:color/black"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="0dp"/>

                            <ImageView
                                android:id="@+id/plant_image_3"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/plant3"/>

                            <View
                                android:layout_width="1000dp"
                                android:layout_height="8dp"
                                android:background="@android:color/black"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/plant_name_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monstera Deliciosa
"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:paddingTop="8dp"/>
                                <Button
                                    android:id="@+id/buy_button_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Buy"
                                    android:layout_gravity="end"
                                    android:paddingTop="8dp"
                                    android:layout_marginLeft="105dp"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/plant_price_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price: 1500 gold"
                                android:paddingTop="4dp"/>
                            <View
                                android:layout_width="1000dp"
                                android:layout_height="8dp"
                                android:background="@android:color/black"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="0dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:elevation="4dp"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <View
                                    android:layout_width="1000dp"
                                    android:layout_height="8dp"
                                    android:background="@android:color/black"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"/>
                                <ImageView
                                    android:id="@+id/plant_image_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/plant4"/>
                                <View
                                    android:layout_width="1000dp"
                                    android:layout_height="8dp"
                                    android:background="@android:color/black"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="5dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/plant_name_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fiddle Leaf Fig
"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:paddingTop="8dp"/>
                                    <Button
                                        android:id="@+id/buy_button_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="Buy"
                                        android:layout_gravity="end"
                                        android:paddingTop="8dp"
                                        android:layout_marginLeft="160dp"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/plant_price_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price: 2200 gold"
                                    android:paddingTop="4dp"/>
                                <View
                                    android:layout_width="1000dp"
                                    android:layout_height="8dp"
                                    android:background="@android:color/black"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="0dp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

            <!-- Repeat CardView block for other plants -->
                        <include layout="@layout/fab_layout"/>

    </LinearLayout>
                </LinearLayout></LinearLayout></LinearLayout></LinearLayout>
</ScrollView>
